@model MeetingRequest
@{
    ViewData["Title"] = "CreateMeeting";
}

<div class="container">
    <h2 class="mt-3">Create New Meeting</h2>

    <form action="/Home/CreateMeeting" method="post" class="mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="mb-3">
            <label for="date" class="form-label">Date:</label>
            <input type="datetime-local" id="date" class="form-control" asp-for="StartTime" >
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="topic" class="form-label">Topic:</label>
            <input type="text" id="topic" class="form-control" asp-for="Topic" >
            <span asp-validation-for="Topic" class="text-danger"></span>
        </div>
       
        <button type="submit" class="btn btn-primary">Create Meeting</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}